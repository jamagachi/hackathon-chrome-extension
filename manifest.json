{
  "manifest_version": 3,
  "name": "Habit Switch",
  "version": "1.0",
  "description": "Limits visits to distracting websites and encourages healthier alternatives.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "hs_icon.png"
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {}
}
